@model List<first.Models.registration>

@{
    ViewData["Title"] = "Users List";
}

<div class="container mt-5">
    <h2 class="mb-4">Admin</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>FreezStaus</th>
                    <th>Freez</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Userrole</td>
                        <td>@user.freez</td>
                        <td>
                            <form asp-action="ToggleFreez" asp-controller="Auth" method="post">
                                <input type="hidden" name="email" value="@user.Email" />
                                <button type="submit" class="btn btn-sm @(user.freez == 1 ? "btn-danger" : "btn-success")">
                                    @(user.freez == 1 ? "Unfreeze" : "Freeze")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found.</p>
    }

    <a class="btn btn-primary mt-3" href="@Url.Action("AdminDashboardView", "Auth")">Back to Dashboard</a>
</div>
